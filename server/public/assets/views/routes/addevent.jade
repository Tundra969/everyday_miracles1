md-content(layout-padding)

  form(id='addEventForm')
    md-input-container(class='md-block')
      label Title
      input(type='text' name='title' ng-model="event.title")
    md-input-container(class='md-block')
      label Description
      input(type='text' name='description' ng-model="event.description")
    md-input-container(flex)
      label  Category
      input(type='text' name='eventCategoryId' ng-model="event.eventCategoryId")

    md-button(ng-click="submitEvent()" class="md-raised md-primary") Submit Event
    .layout-row
      md-input-container(flex)
        label Schedule Date
        input(type='date' name='scheduledate' ng-model="eventScheduleAdd.scheduleDate")
      md-input-container(flex)
        label Start Time
        input(type='time' name='startdatetime' ng-model="eventScheduleAdd.startDateTime")
      md-input-container(flex)
        label End Time
        input(type='time' name='enddatetime' ng-model="eventScheduleAdd.endDateTime")
      md-input-container(flex)
        label  Teacher User Id
        input(type='text' name='teacheruserid' ng-model="eventScheduleAdd.teacherUserId")

    .layout-row
      md-input-container(flex)
        label Repeat Type
        //input(type='text' name='repeattype' ng-model="event.repeatType")
        md-select(name='repeattype' ng-model="event.repeatType")
          md-option(value='None') None
          md-option(value='Daily') Daily
          md-option(value='Weekly') Weekly
          md-option(value='Monthly') Monthly
      //md-input-container(flex)
      //  label Repeat From Date
      //  input(type='date' name='repeatfromdate' ng-model="event.repeatFromDate")
      md-input-container(flex)
        label Repeat To Date
        input(type='date' name='title' ng-model="event.repeatToDate")
