md-content(layout-padding)
  h1 Register
  md-input-container
    input(aria-label="First Name" required ng-model="user.firstName")
    label First Name
  md-input-container
    input(aria-label="Last Name" type="text" required ng-model="user.lastName")
    label Last Name
  md-input-container
    input(aria-label="Username" ng-model="user.username" type="text")
    label Username
  md-input-container
    input(aria-label="Password" type="password" ng-model="user.password")
    label Password
  //- md-input-container
  //-   input(aria-label="Confirm Password" type="password" ng-model="user.password")
  //-   label confirm password
  md-input-container
    input(aria-label="dateOfBirth " type="date" ng-model="user.dateOfBirth")
    label Date of Birth
  md-input-container
    input(aria-label="phoneNumber" type="text" required ng-model="user.phoneNumber")
    label Phone Number
  md-input-container
    input(aria-label="emailAddress" type="text" ng-model="user.emailAddress")
    label Email Address
  md-input-container
    label Contact Type
    md-select(aria-label="Contact Type menu" class="" name="contacttype" ng-model = "user.contactType")
      md-option(aria-label="Email" value="email") Email
      md-option(aria-label="Text" value="text") Text
  md-input-container
    md-radio-group(aria-label="Payment Type" ng-model = "user.paymentType")
      label Payment Type
      md-radio-button(aria-label="Insurance Radio Button" value = "insurance") Insurance (I have state-funded insurance)
      md-radio-button(aria-label="Cash Radio Button" value = "cash") Out of pocket (check or cash in-person)
  md-input-container
    md-radio-group(aria-label="Everyday Miracles Client?" ng-model = "user.everydayMiraclesClientInd")
      label Are you an Everyday Miracles Client?
      md-radio-button(aria-label="Yes Radio Button" ng-value = "true" ) Yes
      md-radio-button(aria-label="No Radio Button" ng-value = "false" ) No
  md-input-container
    input(aria-label="doulaName" type="text" ng-model="user.doulaName")
    label Doula Name
  md-input-container
    input(aria-label="expectedBirthDate" type="date" ng-model="user.expectedBirthDate")
    label Expected Due Date
  if(user !== undefined && user.role === 'admin')
    md-input-container
      label Role
      md-select(aria-label="Role menu" ng-model = "user.roleId" disabled=user.role!== "admin")
        md-option(ng-repeat="role in roles" value="{{role.role_id}}") {{role.name}}
  md-button(aria-label="Submit Button" ng-click="submitRegistration()") Submit
  
