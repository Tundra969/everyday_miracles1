md-content(layout-padding)
  h1 Log In
  md-input-container
    input(ng-model="user.username" aria-label="username")
    label username
  md-input-container
    input(type="password" ng-model="user.password" aria-label="password")
    label password
  md-button(aria-label="submit" ng-click="submitCredentials()") submit
  p or:  
  md-button(aria-label="register" ng-click="go('/userregistration')") register
  
