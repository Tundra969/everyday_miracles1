md-content(layout-padding)
  h1(aria-label="Log In") Log In
  form(aria-label="Log In Form" name='logInForm')  
    md-input-container
      input(ng-model="user.username" required aria-label="username")
      label username
    md-input-container
      input(type="password" ng-model="user.password" required aria-label="password")
      label password
    md-button(aria-label="submit button" ng-disabled="logInForm.$invalid" ng-click="submitCredentials()") submit

    md-button(aria-label="register button"  ng-click="go('/userregistration')") register
  
